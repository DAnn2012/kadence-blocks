{
	"build": [
		"composer install --no-dev",
		"npm install --legacy-peer-deps",
		"npm run build",
		"composer wp",
		"COMPOSER_MEMORY_LIMIT=4G composer wp i18n make-pot ./ ./languages/kadence-blocks.pot -- --include=includes,dist --debug"
	],
	"build_dev": [
		"composer install --no-dev",
		"npm install --legacy-peer-deps",
		"npm run build"
	],
	"checks": {
		"version-conflict": {
			"fail_method": "error",
			"fail_method_dev": "warn"
		}
	},
	"paths": {
		"build_dir": ".pup-build",
		"changelog": "readme.txt",
		"css": [],
		"js": [],
		"versions": [
			{
				"file": "kadence-blocks.php",
				"regex": "(define\\( +['\"]KADENCE_BLOCKS_VERSION['\"], +['\"])([^'\"]+)"
			},
			{
				"file": "kadence-blocks.php",
				"regex": "(Version: +)(.+)"
			},
			{
				"file": "readme.txt",
				"regex": "(Stable tag: +)(.+)"
			}
		],
		"zip_dir": ".pup-zip"
	},
	"repo": "stellarwp/kadence-blocks",
	"zip_use_default_ignore": false,
	"zip_name": "kadence-blocks"
}
